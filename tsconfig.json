{
  "compilerOptions": {
    "declaration": true,
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "noEmit": false,
    "isolatedModules": true
  },
  "include": ["src"]
}
